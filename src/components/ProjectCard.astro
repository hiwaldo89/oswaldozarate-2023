---
import { SiGithub } from "react-icons/si/index.js";
import { FaExternalLinkAlt } from "react-icons/fa/index.js";

export interface Props {
  title: string;
  description: string;
  img: string;
  github?: string;
  link?: string;
}

const { title, description, img, github, link } = Astro.props;
---

<div
  class="bg-slate-50 rounded-md md:flex text-slate-800 md:h-[400px] overflow-hidden items-center mb-8"
>
  <div class="w-full md:w-1/2 h-96 md:h-full">
    <img src={img} alt={title} class="object-cover w-full h-full" />
  </div>
  <div class="md:w-1/2 py-4 px-16">
    <h3 class="text-2xl mb-4">{title}</h3>
    <p class="mb-14">{description}</p>
    <ul class="flex text-sm">
      {
        github !== undefined && (
          <li class="mr-10">
            <a href={github} target="_blank" class="flex items-center">
              <span class="mr-2">Code</span>
              <SiGithub />
            </a>
          </li>
        )
      }
      {
        link !== undefined && (
          <li>
            <a href={link} target="_blank" class="flex items-center">
              <span class="mr-2">Live preview</span>
              <FaExternalLinkAlt />
            </a>
          </li>
        )
      }
    </ul>
  </div>
</div>
